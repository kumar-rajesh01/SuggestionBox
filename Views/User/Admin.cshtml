<style>
    .container {
        max-width: -webkit-fill-available;
        min-width: fit-content;
        background: #F8F9FD;
        background: linear-gradient(0deg, rgb(255, 255, 255) 0%, rgb(244, 247, 251) 100%);
        border-radius: 40px;
        padding: 25px 35px;
        border: 5px solid rgb(255, 255, 255);
        box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 30px 30px -20px;
        margin: 20px;
    }
</style>
<!-- Toastr CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>

<!--Data Table-->
<script type="text/javascript" src=" https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src=" https://cdn.datatables.net/buttons/1.2.4/js/dataTables.buttons.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<!-- Toastr JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>


@section Scripts {
    <script>
        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                toastr.success(successMessage);
            }
            var errorMessage = '@TempData["ErrorMessage"]';
            if (errorMessage) {
                toastr.error(errorMessage);
            }
        });
    </script>
}

<div class="container">
    <table id="myTable" class="table">
        <thead>
            <tr>
                <th width="50px">
                    @Html.DisplayName("Id")
                </th>
                <th width: 900px;>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ip)
                </th>
                <th width="200px">
                    @Html.DisplayName("Created")
                </th>
                <th width="200px">
                    @Html.DisplayName("Updated")
                </th>
                <th width="50px">File</th>
                <th width="50px">Status</th>
                <th width="100px">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SuggestionId)
                    </td>
                    <td>
                        @if (item.Text.Length > 140)
                        {
                            <span>@item.Text.Substring(0, 130)<b class="fa-size" title="Show more" onclick="opencommentDialog('view-text', @item.SuggestionId)">...</b></span>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Text)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateUpdated)
                    </td>
                    <td>
                        @if (item.File != null)
                        {
                            <a asp-action="DownloadFile" asp-route-id="@item.SuggestionId"><i class="fas fa-download" style="font-size: 24px;"></i></a>
                        }
                    </td>
                    <td>
                        @if (item.IsReviewed)
                        {
                            <i class="fas fa-check" style="font-size: 24px; color: #1d9d74;" title="Resolved"></i>
                        }
                        else
                        {
                            <i class="far fa-clock" style="font-size: 24px; color: #ff7900;" title="Pending"></i>
                        }
                    </td>
                    <td style="text-align: center;">
                        @if (!item.IsReviewed)
                        {
                            <i class="fas fa-check fa-size" style="color: #1d9d74;" title="Click to resolve" onclick="opencommentDialog('resolve', @item.SuggestionId)"></i>
                            @if (string.IsNullOrEmpty(item.Comment))
                            {
                                <span> | <i class="fas fa-comment-medical fa-size" style="color: #ff7900;" title="Add comment" onclick="opencommentDialog('comment', @item.SuggestionId)"></i></span>
                            }
                            else
                            {
                                <span> | <i class="far fa-comment-dots" style="font-size: 24px;color: #ff7900;" title="View comment" onclick="opencommentDialog('view-comment', @item.SuggestionId)"></i></span>
                            }
                        }
                        else
                        {
                            @if (!string.IsNullOrEmpty(item.Comment))
                            {
                                <i class="far fa-comment-dots fa-size" style="color: #ff7900;" title="View comment" onclick="opencommentDialog('view-comment', @item.SuggestionId)"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-comment-slash" style="font-size: 24px; color: red;" title="No comments"></i>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <dialog id="commentDialog">
        <i class="fa fa-times float-end close-btn" aria-hidden="true" onclick="closeDialog()" style="color: #8a8987;"></i>
        <form method="dialog" asp-action="SaveComment" method="post" class="form" style="margin-top: 0px !important;">
            <h2 id="dialog-header">Comment</h2>
            <input id="id" name="id" type="hidden" />
            <input id="isResolved" name="isResolved" type="checkbox" hidden />
            <p style="display: none" id="message"></p>
            <div class="form-group" id="comment-box">
                <textarea id="comment" name="comment" class="form-control" placeholder="Enter your comment" height: 350px; width: 500px;></textarea>
            </div>

            <input class="login-button" type="submit" value="Submit">
        </form>
    </dialog>
</div>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            order: [[0, 'desc']]
        });
    });
    var suggestionList = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));

    function opencommentDialog(type, id) {

        var suggestionDetail = suggestionList.find(x => x.SuggestionId == id);

        const dialog = document.getElementById('commentDialog');
        document.getElementById("isResolved").checked = false;
        document.getElementById("isResolved").value = null;
        document.getElementById("comment-box").style = "display: none";
        document.getElementById("comment").required = false;
        document.getElementById("message").style = "display: none";
        const button = document.querySelector('.login-button');
        button.style = 'display: block';
        button.value = 'Submit'; // Change 'Submit' to 'Login'
        document.getElementById("dialog-header").innerText = "Comment";

        if (type == "comment") {
            document.getElementById("id").value = id
            document.getElementById("isResolved").value = null;
            document.getElementById("comment-box").style = "display: block";
            document.getElementById("comment").required = true;
        }
        else if (type == "resolve") {
            document.getElementById("id").value = id
            document.getElementById("isResolved").value = true;
            document.getElementById("isResolved").checked = true;
            document.getElementById("message").style = "display: block";
            document.getElementById("message").innerText = "Are you sure you want to resolve the suggestion?";
            button.value = 'Yes';
        }
        else if (type == "view-comment") {
            document.getElementById("message").style = "display: block";
            document.getElementById("message").innerText = suggestionDetail.Comment;
            button.style = 'display: none';
        }
        else {
            document.getElementById("message").style = "display: block";
            document.getElementById("message").innerText = suggestionDetail.Text;
            document.getElementById("dialog-header").innerText = "Suggestion";
            button.style = 'display: none';
        }
        dialog.showModal();
    }

    function closeDialog() {
        const dialog = document.getElementById('commentDialog');
        dialog.close();
    }
</script>